<h2> Edit Goal: </h2>
<br>
<%= form_for @goal do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>

<h2> Edit Destinations: </h2>
<br>
<p>
    <%= f.fields_for :destinations do |d| %>
    <%= d.hidden_field :traveler_id, value:current_traveler.id %>
    <%= d.label :location %>
    <%= d.text_field :location %>
    <%= d.label :description %>
    <%= d.text_field :description %>
    <%= d.label :completed %>
    <%= d.check_box :completed %>
    <%= d.label :date_traveled%>
    <%= d.date_field :date_traveled %>
</p>

    <% end %>
<%= f.submit %>
    <% end %>